/* 清除浮动的公共类 */
.clearfix:before,
.clearfix:after {
  content:"";
  display:table;
}
.clearfix:after {
  clear:both;
}
/* 为了兼容IE6,7 */
.clearfix {
  *zoom:1;
}

.box {
  width: 100%;
  height: 100%;
  padding: 0 0px;
  min-width: 1080px;
  display: flex;
  flex-direction: column;
  background-color: rgb(47, 59, 82) !important;
  letter-spacing:1px;
  overflow: hidden!important;
}
.top {
  height: 60px;
  width: 100%;
  padding: 0px;
  background: rgba(24, 144, 255);
}
.top .logo {
  width: 260px;
  height: 60px;
  float: left;
  background-image: '../assets/lg.png';
}
.top .title {
  flex: 1;
  float: left;
  text-align: center
}
.top .title i {
  display: block;
  float: left;
  font-size: 24px;
  line-height: 60px;
  color: #fff;
  margin-right: 20px;
}
.top .title p {
  display: block;
  float: left;
  font-size: 18px;
  line-height: 60px;
  color: #fff;
}
.top .logout {
  float: right;
  width: 200px;
  font-weight: 700;
  text-align: right;
  padding: 10px;
  line-height: 40px;
}
.top .logout .lgout {
  color: #fff;
  margin-right: 10px;
}
.top .logout a {
  color: #fff;
}
.top .time {
  float: right;
}
.top .time p{
  display: block;
  line-height: 60px;
}
.main {
  flex: 1;
  display: flex;
  height: 100%;
  overflow: hidden;

  /* align-items: center; */
}
.left {
  flex-shrink: 0;
  float: left;
  width: 200px;
  height: 100%;
  line-height: 30px;
  background-color: #2f3b52;
}

.left .logo {
  height: 160px;
  background-color: #2f3b52;
}
.left .el-icon-arrow-down:before {
