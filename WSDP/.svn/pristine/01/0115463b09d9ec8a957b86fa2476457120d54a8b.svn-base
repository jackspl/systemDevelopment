  color: #3284c3;
}
.left .el-submenu__title {
  height: 50px;
  line-height: 50px;
  color: #a5aab7;
}
.el-submenu [class^=el-icon-] {
  transform: rotate(180deg);
  /* font-size: 30px !important; */
