/* 处理右边框是1px的边框小bug */
.el-aside .el-menu {
  border:none;
  background-color: #2f3b52;
}
.right {
  flex-grow: 1;
  height: auto;
  width: 100%;
  padding: 20px;
  background-color: #02356f;
}
.box .el-main {
  padding: 14px 24px;
  overflow-y: hidden;
}
/* 主体右侧样式 */
.right .el-tabs--border-card>.el-tabs__content {
  padding: 0px;
}
.right .el-tabs--border-card {
  background: #FFF;
  border: 0px;
}
/* 背景颜色 */
.right .el-row {
  background-color: #02356f;
}
.index .right .grid-content .bg-purple-dark {
  background-color: #164276;
  border: 1px solid #00639e;
  border-radius: 4px;
}
/* 右侧导航条样式 */
.right .el-tabs__nav {
  border: 1px solid #1b537f;
  /* margin-bottom: 10px; */
}
.right .el-tabs--border-card>.el-tabs__header .el-tabs__item.is-active {
  color: white;
  background-color: #596c7e;
  border-right-color: #3279a9;
  border-left-color: #3279a9;
}
.right .el-tabs--border-card>.el-tabs__header .el-tabs__item {
  color: white;
}
.right .el-tabs__item {
  background-color: #062c4e;
}
.right .el-tabs__nav-scroll {
  background-color: #02356f;
}
/* 去除下边框高亮阴影 */
.right .el-tabs--border-card {
  -webkit-box-shadow: none !important;
  box-shadow: none !important;
}
.right .el-tabs--border-card>.el-tabs__header .el-tabs__item {
  border: 1px solid #3279a9;
}
.right .el-tabs--border-card>.el-tabs__header .el-tabs__item:not(.is-disabled):hover {
  color: white;
}
.box .el-menu-item, .el-submenu__title {
  height: 40px;
  line-height: 40px;
}